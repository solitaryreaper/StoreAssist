# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# REST API
GET     /                           controllers.SearchController.index()
GET     /api/searchItem             controllers.SearchController.findItemLocation(storeId:Integer, item:String)
GET     /api/searchStoreByZip       controllers.SearchController.findStoresByZipCode(zip:Integer)
GET     /api/searchStoreByAddress   controllers.SearchController.findStoresByAddress(address:String)

GET     /text/searchItem            controllers.MessageController.getItemLocation(textMsg:String)
POST    /text/getItemLocation       controllers.MessageController.postItemLocation()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
