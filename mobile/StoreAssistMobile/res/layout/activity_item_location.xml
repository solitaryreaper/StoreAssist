<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ItemLocationActivity"
    android:background="@drawable/background" >

    <!-- Label: Item can be found at following locations -->
    <TextView
	        android:id="@+id/text_start_label"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
        	android:layout_marginTop="@dimen/inner_margin_top"
	        android:textSize="@dimen/edittext_font_size" />
    
    <!-- BLOCK: SECTION -->
    <RelativeLayout
        android:id="@+id/block_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_start_label"
        android:layout_marginTop="@dimen/inner_margin_top"
        android:paddingLeft="@dimen/activity_padding_horizontal"
        android:paddingRight="@dimen/activity_padding_horizontal"
        android:background="@color/default_background_color" >
    
	    <TextView
	        android:id="@+id/text_section"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:text="Section:"
	        android:textSize="@dimen/edittext_font_size" />
	    
	     <TextView
	        android:id="@+id/text_section_value"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/text_section"
	        android:layout_marginLeft="@dimen/activity_vertical_margin"
	        android:textSize="@dimen/edittext_font_size"
	        android:textStyle="bold" />
	    
    </RelativeLayout>
    
    <!-- BLOCK: AISLE -->
    <RelativeLayout
        android:id="@+id/block_aisle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/block_section"
        android:paddingLeft="@dimen/activity_padding_horizontal"
        android:paddingRight="@dimen/activity_padding_horizontal"
        android:background="@color/default_background_color" >
    
	    <TextView
	        android:id="@+id/text_aisle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:text="Aisle:"
	        android:textSize="@dimen/edittext_font_size" />
	    
	     <TextView
	        android:id="@+id/text_aisle_value"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/text_aisle"
	        android:layout_marginLeft="@dimen/activity_vertical_margin"
	        android:textSize="@dimen/edittext_font_size"
	        android:textStyle="bold" />
	    
    </RelativeLayout>
    
    <!-- BLOCK: SHELF -->
    <RelativeLayout
        android:id="@+id/block_shelf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/block_aisle"
        android:paddingLeft="@dimen/activity_padding_horizontal"
        android:paddingRight="@dimen/activity_padding_horizontal"
        android:background="@color/default_background_color" >
    
	    <TextView
	        android:id="@+id/text_shelf"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:text="Shelf"
	        android:textSize="@dimen/edittext_font_size" />
	    
	     <TextView
	        android:id="@+id/text_shelf_value"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/text_shelf"
	        android:layout_marginLeft="@dimen/activity_vertical_margin"
	        android:textSize="@dimen/edittext_font_size"
	        android:textStyle="bold" />
	    
    </RelativeLayout>

</RelativeLayout>
